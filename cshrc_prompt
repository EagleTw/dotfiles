# Colors!
set     red="%{\033[1;31m%}"
set   green="%{\033[0;32m%}"
set  yellow="%{\033[1;33m%}"
set    blue="%{\033[1;34m%}"
set magenta="%{\033[1;35m%}"
set    cyan="%{\033[1;36m%}"
set   white="%{\033[0;37m%}"
set     end="%{\033[0m%}"

if ($?prompt) then
	set prompt="\n%B%{\033[34m%}[%h] %d %D.%w.%Y %P\n%{\033[37m%}[%n]@[%m]${yellow}[%~]\n=> " 
